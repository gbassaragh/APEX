# Application
APP_NAME=APEX
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=False

# Azure SQL Database
AZURE_SQL_SERVER=your-server.database.windows.net
AZURE_SQL_DATABASE=apex_db
AZURE_SQL_DRIVER=ODBC Driver 18 for SQL Server

# Azure OpenAI
AZURE_OPENAI_ENDPOINT=https://your-openai.openai.azure.com/
AZURE_OPENAI_DEPLOYMENT=gpt-4
AZURE_OPENAI_API_VERSION=2024-02-15-preview

# Azure Storage
AZURE_STORAGE_ACCOUNT=yourstorageaccount
AZURE_STORAGE_CONTAINER_UPLOADS=uploads
AZURE_STORAGE_CONTAINER_PROCESSED=processed

# Azure Key Vault (optional)
AZURE_KEY_VAULT_URL=https://your-keyvault.vault.azure.net/

# API Configuration
API_V1_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:8000

# Azure Application Insights
AZURE_APPINSIGHTS_CONNECTION_STRING=InstrumentationKey=your-key;IngestionEndpoint=https://region.applicationinsights.azure.com/

# Logging
LOG_LEVEL=INFO

# Monte Carlo Configuration
DEFAULT_MONTE_CARLO_ITERATIONS=10000
DEFAULT_CONFIDENCE_LEVEL=0.80
