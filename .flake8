[flake8]
max-line-length = 100
jobs = 1
exclude =
    venv,
    .venv,
    alembic/versions,
    __pycache__,
    .git
# E203: whitespace before ':' (conflicts with black's slice formatting)
extend-ignore = E203
# E402: conftest.py needs to set env vars before imports
per-file-ignores =
    tests/conftest.py:E402
